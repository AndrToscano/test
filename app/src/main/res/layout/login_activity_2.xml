<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dim_gray"
    android:orientation="vertical"
    android:id="@+id/layout_login_2_root"
    tools:context=".ui.activities.LoginActivity2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:gravity="top|center">

        <TextView
            android:id="@+id/txt_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kanit_thin"
            android:text="@string/login"
            android:textColor="@color/white"
            android:textSize="40dp" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="180dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/midnight_green">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <EditText
                android:id="@+id/txt_username"
                style="@style/editText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height_normal"
                android:fontFamily="@font/baloo_bhai"
                android:drawableLeft="@drawable/baseline_account_circle_24"
                android:drawableTint="@color/blue"
                android:drawablePadding="@dimen/drw_padding_ediText"
                android:hint="@string/username"
                android:maxLines="1"
                android:inputType="text"
                android:imeOptions="actionNext"/>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/red">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_email"
                    style="@style/editText"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/btn_height_normal"
                    android:layout_margin="15dp"
                    android:hint="@string/username"
                    android:inputType="textEmailAddress"
                    android:drawableLeft="@drawable/baseline_account_circle_24"
                    android:drawableTint="@color/red"
                    android:drawablePadding="@dimen/drw_padding_ediText"
                    android:maxLines="1"
                    android:imeOptions="actionNext"/>

            </com.google.android.material.textfield.TextInputLayout>

            <EditText
                android:id="@+id/txt_password"
                style="@style/editText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height_normal"
                android:fontFamily="@font/baloo_bhai"
                android:drawableLeft="@drawable/baseline_password_24"
                android:drawableTint="@color/blue"
                android:drawablePadding="@dimen/drw_padding_ediText"
                android:text="@string/password"
                android:maxLines="1"
                android:inputType="textPassword"
                android:imeOptions="actionGo"/>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/simonetta"
                android:drawableLeft="@drawable/baseline_arrow_forward_24"
                android:drawableTint="@color/white"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:layout_marginTop="40dp"
                android:text="@string/txt_btn_login"
                android:textSize="24dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="540dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="60dp"
        android:backgroundTint="@color/cardview_shadow_start_color"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/user_login_2" />

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="560dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/white"
            android:text="@string/don_t_have_an_account"
            android:textSize="18dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:text="@string/txt_btn_sign_up"/>

    </LinearLayout>
</RelativeLayout>